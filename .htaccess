# TimeTracker Pro - home.pl Configuration
RewriteEngine On

# Enable CGI execution for Python files
AddHandler cgi-script .py3
Options +ExecCGI

# Allow .py3 files to be executed
<Files "*.py3">
    SetHandler cgi-script
    Options +ExecCGI
</Files>

# React Router support - let .py3 files pass through
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d  
RewriteCond %{REQUEST_URI} !^/.*\.py3$
RewriteCond %{REQUEST_URI} !^/static/
RewriteRule ^(.*)$ /index.html [L]

# Security headers
Header always set X-Content-Type-Options nosniff
Header always set X-Frame-Options DENY
Header always set X-XSS-Protection "1; mode=block"

# Force HTTPS if not already
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]